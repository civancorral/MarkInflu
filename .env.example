# ============================================
# MARKINFLU - Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://markinflu:markinflu@localhost:5432/markinflu?schema=public"

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# JWT (for API)
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# ============================================
# STRIPE
# ============================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_CONNECT_CLIENT_ID="ca_..."

# Platform fee percentage (e.g., 0.10 = 10%)
PLATFORM_FEE_PERCENT="0.10"

# ============================================
# MUX (Video Processing)
# ============================================
MUX_TOKEN_ID="your-mux-token-id"
MUX_TOKEN_SECRET="your-mux-token-secret"
MUX_WEBHOOK_SECRET="your-mux-webhook-secret"

# ============================================
# REDIS (Cache & Real-time)
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# EMAIL (Resend)
# ============================================
RESEND_API_KEY="re_..."
EMAIL_FROM="MarkInflu <noreply@markinflu.com>"

# ============================================
# FILE STORAGE (S3/R2)
# ============================================
S3_BUCKET="markinflu-assets"
S3_REGION="us-east-1"
S3_ACCESS_KEY="your-access-key"
S3_SECRET_KEY="your-secret-key"
S3_ENDPOINT=""  # Leave empty for AWS, set for R2/MinIO

# ============================================
# APPLICATION
# ============================================
NODE_ENV="development"
APP_URL="http://localhost:3000"
API_URL="http://localhost:4000"

